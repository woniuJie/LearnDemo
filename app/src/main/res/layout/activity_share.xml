<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".share.ShareActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享文本内容"
        android:onClick="onShareText"
        /><Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享文本内容 Intent.createChooser()"
        android:onClick="onShareText1"
        /><Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享二进制文件"
        android:onClick="onShareImage"
        /><Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取多个内容"
        android:onClick="onShareImageMultiple"
        />

    <TextView
        android:id="@+id/tv_share_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送多块内容"
        android:onClick="onShareImageMore"
        />

</LinearLayout>